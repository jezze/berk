pkgname=berk
pkgver=0.0.1
pkgrel=1
pkgdesc='Berk is a versatile job dispatcher'
arch=('any')
url='http://github.com/jezze/berk'
license=('MIT')
package=('libssh2')
depends=('libssh2')
source=($pkgname-$pkgver.tar.gz)

build() {
    cd "$pkgname-$pkgver"
    make
}

package() {
    cd "$pkgname-$pkgver"
    make DESTDIR="$pkgdir/usr/bin" install
}
